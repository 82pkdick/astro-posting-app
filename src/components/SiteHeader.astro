---
import ScrapsLogo from "../assets/scraps-logo.svg";
import { default as config } from "../app-config";
import SideMenuButton from "./SideMenuButton.svelte";

const baseUrl = import.meta.env.BASE_URL;
---

<div class="hdr-l-mod">
  <!-- Menu Toggle Button -->
  <SideMenuButton client:load />

  <!-- Site Title -->
  <a href=`${baseUrl}` class="site-title-link">
    <h3 class="site-title init-space flex-l-center">
      <!-- Site Logo -->
      <i class="icon inline site-logo-icon">
        <ScrapsLogo />
      </i>
      <span class="site-title-text">{config.SiteTitle}</span>
    </h3>
  </a>
</div>

<div class="hdr-r-mod"></div>

<style lang="scss">
  .hdr-l-mod {
    position: relative;
    top: 0;
    left: 0;
    margin-left: 0;
    display: flex;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;

    .site-title-link {
      width: 100%;
      height: auto;
      margin-left: 12px;
    }

    .site-title {
      .site-title-text {
        display: inline-block;
        padding-left: 0.5em;
      }
    }

    .icon.inline.site-logo-icon {
      svg {
        stroke: #2e8b57;
        fill: #2e8b57;
      }
    }
  }
</style>
